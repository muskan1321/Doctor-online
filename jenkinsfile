pipeline {
    agent any
     parameters {
       choice choices: ['dev', 'test', 'prod'], description: 'choose the env to deploy', name: 'envName'
    }
  stages {
        stage('maven build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('deploy to dev') {
            steps {
              echo "deploy to dev"
            }
        }
         stage('deploy to test') {
            steps {
              echo "deploy to test"
            }
        }
        stage('deploy to prod') {
            steps {
              echo "deploy to prod"
            }
        }
    }
}
