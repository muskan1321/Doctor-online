pipeline {
    agent any
     parameters {
       choice choices: ['dev', 'test', 'prod'], description: 'choose the env to deploy', name: 'envName'
    }
  stages {
        stage('maven build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('dev deploy') {
            steps {
               sshagent(['tomcat-dev']) {
                sh "scp -o StrictHostKeyChecking=no target/doctor-online.war ec2-user@172.31.19.102:/opt/tomcat9/webapps"
                sh "ssh ec2-user@172.31.19.102 /opt/tomcat9/bin/shutdown.sh"
                 sh "ssh ec2-user@172.31.19.102 /opt/tomcat9/bin/startup.sh"
             }
            }
        }
    }
}
